generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(cuid())
  name        String
  email       String        @unique
  password    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Transaction Transaction[]

  @@map("users")
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  description String
  amount      Float
  type        String
  createdAt   DateTime

  user User @relation(fields: [userId], references: [id])

  @@map("transactions")
}
